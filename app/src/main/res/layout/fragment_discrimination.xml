<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADACAF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DiscriminationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_height="600dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:background="#A299AE"
                android:layout_height="300dp"
                android:src="@drawable/discrimination_text"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Discrimination Right"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:text="No citizen shall on grounds only of race, religion,caste,place of birth, sex or any of them, be subject to any liability, disability,restriction or condition with respect."
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>