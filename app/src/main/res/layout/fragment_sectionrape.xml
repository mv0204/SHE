<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SectionrapeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_height="600dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:background="#DDC9F6"
                android:layout_height="300dp"
                android:src="@drawable/domestic_violence"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:justificationMode="inter_word"
                android:text="No citizen shall be discriminated against in matters of public employment or any type  appointment on grounds of race, religion, caste, sex, place of birth,accent, descent or residence."
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>